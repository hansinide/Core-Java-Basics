package Regx;
import java.util.regex.*;

public class RegexDemo01 {
    public static void main (String [] agrs)
    {
        String content="This is Hansini" + "From virtusa.com" ;
        String pattern=".*virtusa.*"; 
        
        boolean isMatch= Pattern.matches(pattern, content);
        System.out.print("The Text Contain 'virtusa'? " +isMatch);
        
        
    }
    
}
